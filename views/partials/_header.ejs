<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <% if (user) { %>
      <form class="form-inline" action="/logout" method="POST" style="padding-top: 0px">
        Logged in As: <%= user.email %>!
        <button type="submit" class="btn btn-outline-dark">Logout</button>
      </form>
      <% } else { %>
        <a href="/login" class="btn btn-outline-light" role="button" aria-disabled="true" style="margin-right: 1em">Login</a>
        <a href="/register" class="btn btn-outline-light" role="button" aria-disabled="true" style="margin-right: 2em">Register</a>
      <% } %>
    </div>
  </nav>
</header>